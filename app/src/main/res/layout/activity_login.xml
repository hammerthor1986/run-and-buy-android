<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_below="@+id/login"
        android:layout_alignLeft="@+id/login"
        android:layout_alignStart="@+id/login"
        android:layout_marginTop="53dp"
        android:layout_alignRight="@+id/login"
        android:layout_alignEnd="@+id/login" />

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_below="@+id/passTextField"
        android:layout_alignLeft="@+id/passTextField"
        android:layout_alignStart="@+id/passTextField"
        android:layout_marginTop="58dp"
        android:layout_alignRight="@+id/passTextField"
        android:layout_alignEnd="@+id/passTextField" />

    <EditText
        android:id="@+id/passTextField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@+id/passTextView"
        android:layout_centerHorizontal="true">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/registerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:gravity="center"
        android:text="Run And Buy"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:contentDescription="carrito"
        android:scaleType="fitCenter"
        android:src="@mipmap/carrito" />
    <TextView
        android:id="@+id/passTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/emailTextField"
        android:layout_alignLeft="@+id/passTextField"
        android:layout_alignStart="@+id/passTextField" />

    <EditText
        android:id="@+id/emailTextField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/emailTextView"
        android:layout_alignLeft="@+id/passTextField"
        android:layout_alignStart="@+id/passTextField" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/registerTitle"
        android:layout_alignLeft="@+id/emailTextField"
        android:layout_alignStart="@+id/emailTextField" />

</RelativeLayout>